# =====================================
# Example Environment Variables
# =====================================
# Copy this file to `.env.local` or `.env.gcp` 
# and fill in the actual values.

# -------------------------------
# General
# -------------------------------
ENV=local            # or gcp
APP_PORT=8000        # FastAPI / gRPC service port
LOG_LEVEL=info       # debug | info | warning | error

# -------------------------------
# Database (PostgreSQL / CockroachDB)
# -------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=feature_store

# -------------------------------
# Redis (Cache Layer)
# -------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -------------------------------
# Kafka (Streaming Ingestion)
# -------------------------------
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC_TRANSACTIONS=transactions
KAFKA_TOPIC_RISK=risk_features

# -------------------------------
# BigQuery (Batch Storage)
# -------------------------------
BQ_PROJECT_ID=your_project_id
BQ_DATASET=feature_store
BQ_TABLE=users

# -------------------------------
# GCP Pub/Sub (Streaming)
# -------------------------------
PUBSUB_PROJECT_ID=your_project_id
PUBSUB_TOPIC=transactions
PUBSUB_SUBSCRIPTION=transaction-sub

# -------------------------------
# Monitoring (Prometheus / Grafana)
# -------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# -------------------------------
# Airflow (Pipelines Orchestration)
# -------------------------------
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=your_fernet_key

# -------------------------------
# Security
# -------------------------------
JWT_SECRET=your_jwt_secret
JWT_ALGORITHM=HS256
